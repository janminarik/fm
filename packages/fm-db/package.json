{
  "name": "@repo/fm-db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "pnpm run generate && tsc -b -v",
    "clean": "pnpm dlx rimraf node_modules dist .turbo tsconfig.tsbuildinfo",
    "db:migrate:dev": "pnpm use-dev-env prisma migrate dev",
    "db:migrate:e2e": "pnpm use-e2e-env prisma migrate dev",
    "db:migrate:reset:dev": "pnpm use-dev-env prisma migrate reset --force",
    "db:migrate:reset:e2e": "pnpm use-e2e-env prisma migrate reset --force",
    "db:seed:dev": "pnpm use-dev-env tsx ./src/seed/seed.ts",
    "db:seed:e2e": "pnpm use-e2e-env tsx ./src/seed/seed.ts",
    "dev": "pnpm build --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate": "pnpm use-dev-env prisma generate",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "prisma:studio": "pnpm with-env prisma studio",
    "test": "jest -p tsconfig.spec.json",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest -p tsconfig.spec.json test/integration",
    "test:watch": "jest -p tsconfig.spec.json --watch",
    "use-dev-env": "dotenv -e ../../.env.development --",
    "use-e2e-env": "dotenv -e ../../.env.test --"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@nestjs-cls/transactional": "^2.5.0",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.16",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@prisma/client": "^6.5.0",
    "@repo/config-eslint": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@repo/fm-domain": "workspace:*",
    "@repo/fm-shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "type-fest": "^4.37.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nestjs/testing": "^11.0.11",
    "@repo/config-eslint": "workspace:*",
    "@repo/config-jest": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@repo/fm-mock-data": "workspace:*",
    "@repo/fm-shared": "workspace:*",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.5.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "5.8.2"
  }
}