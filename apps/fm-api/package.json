{
  "name": "fm-api",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "",
  "scripts": {
    "build": "nest build",
    "clean": "pnpm dlx rimraf node_modules dist .turbo tsconfig.tsbuildinfo",
    "dev": "pnpm use-dev-env nest start --watch",
    "docker:deploy": "prisma migrate deploy && node prisma/seed/seed.js && node dist/src/main",
    "format": "prettier --write \"{src,e2e}/**/*.ts\"",
    "lint": "eslint \"{src,e2e}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,e2e}/**/*.ts\"",
    "start": "nest start",
    "start:debug": "pnpm use-dev-env nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "test": "jest --testPathIgnorePatterns=e2e",
    "test:cov": "jest --testPathIgnorePatterns=e2e --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest.e2e.config.mjs",
    "test:e2e:cov": "jest --config ./jest.e2e.config.mjs --coverage",
    "test:watch": "jest --watch",
    "use-dev-env": "dotenv -e ../../.env.development --",
    "use-e2e-env": "dotenv -e ../../.env.test --"
  },
  "dependencies": {
    "@nestjs-cls/transactional": "^2.5.0",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.16",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.11",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.11",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@ngneat/falso": "^7.3.0",
    "@prisma/client": "^6.5.0",
    "@repo/config-eslint": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@repo/fm-application": "workspace:*",
    "@repo/fm-auth": "workspace:*",
    "@repo/fm-db": "workspace:*",
    "@repo/fm-domain": "workspace:*",
    "@repo/fm-mock-data": "workspace:*",
    "@repo/fm-shared": "workspace:*",
    "@repo/nest-common": "workspace:*",
    "@repo/nest-pino": "workspace:*",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "nestjs-cls": "^5.4.0",
    "nestjs-pino": "^4.3.1",
    "papaparse": "^5.5.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "type-fest": "^4.37.0",
    "utility-types": "^3.11.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@jest/globals": "^29.7.0",
    "@jest/types": "^29.6.3",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/testing": "^11.0.11",
    "@repo/config-eslint": "workspace:*",
    "@repo/config-jest": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "4.0.0-beta1",
    "prisma": "^6.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}